{
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "System.Net.Http.HttpClient": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "@l= 'Error' or @l= 'Fatal' or @l = 'Warning'"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "./Logs/Audit.log",
                  "outputTemplate": "{Timestamp:o} [{Level:u3}] [{MachineName}/{ThreadId}] ({SourceContext}) {Message}{NewLine}{Exception}"
                }
              }
            ]
          }
        }
      },
      {
        "Args": {
          "configureLogger": {
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "./Logs/SmICS.log",
                  "outputTemplate": "{Timestamp:o} [{Level:u3}] [{MachineName}/{ThreadId}] ({SourceContext}) {Message}{NewLine}{Exception}"
                }
              }
            ]
          }
        },
        "Name": "Logger"
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "Properties": {
      "Application": "SmICSWebApp"
    }
  }
}
